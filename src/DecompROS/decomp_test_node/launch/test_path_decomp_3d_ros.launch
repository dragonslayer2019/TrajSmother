<launch>
  <!-- 你的原始节点 -->
  <node pkg="decomp_test_node"
        type="test_path_decomp_3d_ros"
        name="test_decomp"
        output="screen">
    <param name="bag_file" value="$(find decomp_test_node)/data/simple.bag"/>
    <param name="bag_topic" value="/cloud"/>
    <param name="path_file" value="$(find decomp_test_node)/data/path3d_swift.txt"/>
    <param name="robot_description" command="cat $(find decomp_test_node)/src/urdf/drone.urdf" />
  </node>

  <!-- 加载无人机URDF模型 -->
  <param name="robot_description" command="cat $(find decomp_test_node)/src/urdf/drone.urdf" />

  <arg name = "model"/>
  <param name = "robot_description" textfile = "$(find decomp_test_node)/src/urdf/drone.urdf"/>
  <param name = "use_gui" value = "true"/>

  <node name = "joint_state_publisher"
        pkg = "joint_state_publisher"
        type = "joint_state_publisher"/>

  <node name = "robot_state_publisher"
        pkg = "robot_state_publisher"
        type = "state_publisher"/>

</launch>